<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_bg"
    android:orientation="vertical" >

    <RelativeLayout
        style="@style/title_style"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/activity_answer_online_response_tv"
            style="@style/title_tv_center"
            android:text="我来解答" />

        <ImageView
            android:id="@+id/activity_answer_online_response_iv_back"
            style="@style/title_iv_back" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="15dp"
        android:background="@drawable/remark_backgroud" >

        <EditText
            android:id="@+id/activity_answer_online_response_et_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@null"
            android:gravity="top"
            android:hint="请输入内容..."
            android:padding="10dp"
            android:textSize="15sp" />
    </LinearLayout>
    
    <Button 
        android:id="@+id/activity_answer_online_response_btn_submit"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="提交留言"
        android:layout_margin="15dp"
        android:textColor="#FFF"
        android:background="@drawable/login"
        />

</LinearLayout>