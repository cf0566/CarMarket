<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="vertical" >

        <com.cpic.carmarket.view.CircleImageView
            android:id="@+id/item_answer_iv_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/touxiang" />

        <TextView
            android:id="@+id/item_answer_tv_newmsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="#D80307"
            android:paddingBottom="2dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="2dp"
            android:text="新消息(9)"
            android:textSize="12sp"
            android:textColor="#FFF" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/item_answer_tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="李某某" />

            <TextView
                android:id="@+id/item_answer_tv_repair_type"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:background="#404040"
                android:gravity="center"
                android:paddingBottom="3dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="3dp"
                android:text="诊断维修"
                android:textColor="#FFF"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_answer_tv_car_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="奥迪A6L"
            android:textColor="#B4B4B4"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_answer_tv_reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="我的汽车在行驶过程中突然熄火，大方向也不起作用"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>