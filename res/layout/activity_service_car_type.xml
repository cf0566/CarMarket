<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        style="@style/title_style"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/activity_service_car_tv"
            style="@style/title_tv_center"
            android:text="选择服务类型" />

        <ImageView
            android:id="@+id/activity_service_car_iv_back"
            style="@style/title_iv_back" />
    </RelativeLayout>

    <TextView style="@style/my_divide_line" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFF"
            android:orientation="vertical" >

            <CheckBox
                android:id="@+id/activity_service_car_cbox_wash_car"
                style="@style/my_check_box"
                android:text="洗车" />

            <TextView style="@style/my_divide_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/activity_service_car_cbox_meirong"
                    style="@style/my_check_box"
                    android:text="美容装潢" />

                <TextView
                    android:id="@+id/activity_service_car_tv_meirong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|right"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:drawableRight="@drawable/cllick_jinru"
                    android:text="请选择车型" 
                    android:textColor="#B3B3B3"
                    android:textSize="13sp"/>
            </LinearLayout>

            <TextView style="@style/my_divide_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/activity_service_car_cbox_xiufu"
                    style="@style/my_check_box"
                    android:text="修复改装" />

                <TextView
                    android:id="@+id/activity_service_car_tv_xiufu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                     android:gravity="center_vertical|right"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:drawableRight="@drawable/cllick_jinru"
                     android:text="请选择车型" 
                    android:textColor="#B3B3B3"
                    android:textSize="13sp" />
            </LinearLayout>

            <TextView style="@style/my_divide_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/activity_service_car_cbox_baoyang"
                    style="@style/my_check_box"
                    android:text="保养" />

                <TextView
                    android:id="@+id/activity_service_car_tv_baoyang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                     android:gravity="center_vertical|right"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:drawableRight="@drawable/cllick_jinru"
                     android:text="请选择车型" 
                    android:textColor="#B3B3B3"
                    android:textSize="13sp" />
            </LinearLayout>

            <TextView style="@style/my_divide_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/activity_service_car_cbox_banpen"
                    style="@style/my_check_box"
                    android:text="钣喷" />

                <TextView
                    android:id="@+id/activity_service_car_tv_banpen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                     android:gravity="center_vertical|right"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:drawableRight="@drawable/cllick_jinru"
                     android:text="请选择车型" 
                    android:textColor="#B3B3B3"
                    android:textSize="13sp"/>
            </LinearLayout>

            <TextView style="@style/my_divide_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/activity_service_car_cbox_zhenduan"
                    style="@style/my_check_box"
                    android:text="诊断维修" />

                <TextView
                    android:id="@+id/activity_service_car_tv_zhenduan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                     android:gravity="center_vertical|right"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:drawableRight="@drawable/cllick_jinru"
                     android:text="请选择车型" 
                    android:textColor="#B3B3B3"
                    android:textSize="13sp"/>
            </LinearLayout>

            <TextView style="@style/my_divide_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/activity_service_car_cbox_luntai"
                    style="@style/my_check_box"
                    android:text="轮胎" />

                <TextView
                    android:id="@+id/activity_service_car_tv_luntai"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/cllick_jinru"
                     android:gravity="center_vertical|right"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="请选择车型" 
                    android:textColor="#B3B3B3"
                    android:textSize="13sp"/>
            </LinearLayout>

            <TextView style="@style/my_divide_line" />

            <CheckBox
                android:id="@+id/activity_service_car_cbox_ershou"
                style="@style/my_check_box"
                android:text="二手车" />

            <TextView style="@style/my_divide_line" />

            <Button
                android:id="@+id/activity_service_car_btn_ensure"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="15dp"
                android:background="@drawable/login"
                android:text="确认服务类型"
                android:textColor="#FFF"
                android:textSize="15sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>