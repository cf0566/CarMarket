<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <FrameLayout 
        android:id="@+id/activity_main_framlayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        ></FrameLayout>
	<RadioGroup 
	    android:id="@+id/activity_main_rgroup"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:background="#171717"
	    >
		<RadioButton 
		    android:id="@+id/activity_main_rbtn_answer"
		    style="@style/main_activity_radiogroup"
		    android:text="我的问答"
		    android:textColor="@drawable/answer_text_change"
		    android:checked="true"
		    android:tag="0"
		    android:drawableTop="@drawable/answer_rgroup"
		    />	    
		<RadioButton 
		    android:id="@+id/activity_main_rbtn_msg"
		    style="@style/main_activity_radiogroup"
		    android:text="我的消息"
		     android:tag="1"
		    android:textColor="@drawable/answer_text_change"
		    android:drawableTop="@drawable/message_rgroup"
		    />	    
		<RadioButton 
		    android:id="@+id/activity_main_rbtn_form"
		    style="@style/main_activity_radiogroup"
		    android:text="我的订单"
		     android:tag="2"
		    android:textColor="@drawable/answer_text_change"
		    android:drawableTop="@drawable/form_rgroup"
		    />	    
		<RadioButton 
		    android:id="@+id/activity_main_rbtn_mine"
		    style="@style/main_activity_radiogroup"
		    android:text="个人中心"
		     android:tag="3"
		    android:textColor="@drawable/answer_text_change"
		    android:drawableTop="@drawable/mine_rgroup"
		    />	    
	    
	    
	</RadioGroup>

</LinearLayout>