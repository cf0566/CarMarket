<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical" >

    <RelativeLayout
        style="@style/black_title_style"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/activity_message_details_iv_back"
            style="@style/black_title_iv_back" />

        <TextView
            android:id="@+id/activity_message_tv_title"
            style="@style/black_title_tv_center"
            android:text="问答详情" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#FFF"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp" >

            <TextView
                android:id="@+id/activity_message_tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我的汽车在行驶过程中？"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/activity_message_tv_carname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:drawableLeft="@drawable/qichexiaotu"
                    android:drawablePadding="5dp"
                    android:text="别克凯越"
                    android:textColor="#76757F"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/activity_message_tv_ordertime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="预约时间：2015-06-17"
                    android:textColor="#76757F"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/activity_message_tv_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/weixiuxiangmu"
                android:drawablePadding="5dp"
                android:text="维修项目：底盘、发动机"
                android:textColor="#76757F"
                android:textSize="12sp" />

            <com.cpic.carmarket.view.MyGridView
                android:id="@+id/activity_message_gv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:listSelector="#00000000"
                android:numColumns="4" >
            </com.cpic.carmarket.view.MyGridView>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:padding="10dp" >

        <Button
            android:id="@+id/activity_message_btn_onlinetalk"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/online_answer"
            android:text="在线留言"
            android:textColor="#FFF" />
    </LinearLayout>

</LinearLayout>