<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >
        <ImageView 
            android:id="@+id/item_form_wait_iv_icon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/empty_photo"
            android:scaleType="center"
            />
        <TextView 
             android:id="@+id/item_form_wait_tv_com"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:layout_toRightOf="@id/item_form_wait_iv_icon"
			android:text="合肥俊辉汽配有限公司"
			android:textSize="15sp"
			android:padding="10dp"
            />
        <TextView 
             android:id="@+id/item_form_wait_tv_price"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignBottom="@id/item_form_wait_iv_icon"
			android:layout_toRightOf="@id/item_form_wait_iv_icon"
			android:text="$20.00"
			android:textColor="#E68520"
			android:textSize="15sp"
			android:padding="10dp"
            />
    </RelativeLayout>
    
    <TextView style="@style/my_divide_line"/>
    
    <LinearLayout 
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"        
        >
        <TextView 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <TextView 
            android:id="@+id/item_form_frag_tv_start_service"
           	style="@style/form_tv_service"
            android:text="开始服务"
            />
    </LinearLayout>
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/main_bg"
        />

</LinearLayout>
