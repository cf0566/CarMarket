<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical" >
     <RelativeLayout
        style="@style/title_style"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/activity_wash_manager_tv"
            style="@style/title_tv_center"
            android:text="洗车服务" />

        <ImageView
            android:id="@+id/activity_wash_manager_iv_back"
            style="@style/title_iv_back" />
    </RelativeLayout>

   <ListView 
       android:id="@+id/activity_wash_manager_lv"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:listSelector="#00000000"
       android:background="#FFF"
       android:layout_marginTop="15dp"
       ></ListView>
  
    
    <Button 
        android:id="@+id/activity_wash_manager_btn_delete"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="确认删除"
        android:textColor="#FFF"
        android:background="@drawable/btn_delete"
        android:layout_margin="20dp"
        />
    
    

</LinearLayout>
