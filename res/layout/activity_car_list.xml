<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D4D4D4"
    android:orientation="vertical" >

    <RelativeLayout
        style="@style/title_style"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/activity_car_list_tv"
            style="@style/title_tv_center"
            android:text="添加车型" />

        <ImageView
            android:id="@+id/activity_car_list_iv_back"
            style="@style/title_iv_back" />
    </RelativeLayout>

    <TextView style="@style/my_divide_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/remark_backgroud" 
        android:gravity="center"
        android:orientation="horizontal">

        
        <ImageView 
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/tilku_shousuo"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请搜索品牌"
            android:padding="5dp"
            android:gravity="center"
            android:textColorHint="#9E9E9E"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView style="@style/my_divide_line" />
    
    <ExpandableListView 
        android:id="@+id/activity_car_list_elv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF"
        android:groupIndicator="@null"
        ></ExpandableListView>
    
    

</LinearLayout>