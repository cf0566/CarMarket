<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_bg"
    android:orientation="vertical" >
    <RelativeLayout
        style="@style/title_style"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/activity_setpsd_tv"
            style="@style/title_tv_center"
            android:text="设置密码" />

        <ImageView
            android:id="@+id/activity_setpsd_iv_back"
            style="@style/title_iv_back" />
    </RelativeLayout>

      <TextView
        style="@style/my_divide_line"
        android:layout_marginTop="10dp" />
      
      	<EditText 
   	    android:id="@+id/activity_setpsd_et_first"
   	    android:layout_width="match_parent"
   	    android:layout_height="wrap_content"
   	    android:hint="请重新输入密码"
   	    android:textSize="15sp"
   	    android:drawableLeft="@drawable/mima"
   	    android:drawablePadding="10dp"
   	    android:background="#FFF"
   	    android:password="true"
   	    android:paddingLeft="20dp"
   	    android:textColorHint="#D8D8D8"
   	    android:paddingTop="5dp"
   	    android:paddingBottom="5dp"
   	    />
   	<TextView 
       style="@style/my_divide_line"
       android:layout_marginLeft="15dp"
       android:layout_marginRight="15dp"
       />
   	
   	<EditText 
   	    android:id="@+id/activity_setpsd_et_two"
   	    android:layout_width="match_parent"
   	    android:layout_height="wrap_content"
   	    android:hint="请再次输入密码"
   	    android:textSize="15sp"
   	    android:drawableLeft="@drawable/mima"
   	    android:drawablePadding="10dp"
   	    android:background="#FFF"
   	    android:password="true"
   	    android:paddingLeft="20dp"
   	    android:paddingTop="5dp"
   	    android:textColorHint="#D8D8D8"
   	    android:paddingBottom="5dp"
   	    />
   <TextView 
       style="@style/my_divide_line"
       android:layout_marginBottom="15dp"
       />
    <Button 
       android:id="@+id/activity_setpsd_btn_login"
       android:layout_width="match_parent"
       android:layout_height="35dp"
       android:text="确认并登陆"
       android:layout_marginLeft="20dp"
       android:layout_marginRight="20dp"
       android:textColor="#FFF"
       android:background="@drawable/login"
       />
      
</LinearLayout>
