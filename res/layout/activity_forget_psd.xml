<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_bg"
    android:orientation="vertical" >
     <RelativeLayout
        style="@style/title_style"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/activity_forget_tv"
            style="@style/title_tv_center"
            android:text="忘记密码" />

        <ImageView
            android:id="@+id/activity_forget_iv_back"
            style="@style/title_iv_back" />
    </RelativeLayout>
     <TextView
        style="@style/my_divide_line"
        android:layout_marginTop="10dp" />
      
      	<EditText 
   	    android:id="@+id/activity_forget_et_mobile"
   	    android:layout_width="match_parent"
   	    android:layout_height="wrap_content"
   	    android:hint="请输入手机号"
   	    android:textSize="15sp"
   	    android:drawableLeft="@drawable/dl_shoujihao"
   	    android:drawablePadding="10dp"
   	    android:background="#FFF"
   	   	android:phoneNumber="true"
   	   	android:maxLength="11"
   	    android:paddingLeft="20dp"
   	    android:textColorHint="#D8D8D8"
   	    android:paddingTop="5dp"
   	    android:paddingBottom="5dp"
   	    />
   	<TextView 
       style="@style/my_divide_line"
       android:layout_marginLeft="15dp"
       android:layout_marginRight="15dp"
       />
   	
   	<LinearLayout 
   	    android:layout_width="match_parent"
   	    android:layout_height="wrap_content"
   	    android:orientation="horizontal"
   	    android:background="#FFF"
   	    >
   	
   	<EditText 
   	    android:id="@+id/activity_forget_et_checknum"
   	    android:layout_width="0dp"
   	    android:layout_height="wrap_content"
   	    android:hint="请输入验证码"
   	    android:textSize="15sp"
   	    android:drawableLeft="@drawable/yanzhengma"
   	    android:drawablePadding="10dp"
   	    android:layout_weight="1"
   	    android:background="#FFF"
   	    android:password="true"
   	    android:paddingLeft="20dp"
   	    android:paddingTop="5dp"
   	    android:textColorHint="#D8D8D8"
   	    android:paddingBottom="5dp"
   	    />
   		<TextView 
   		    android:layout_width="1dp"
   		    android:layout_height="match_parent"
   		    android:background="#BBBBBB"
   		    android:layout_margin="5dp"
   		    />
   		<TextView 
   		    android:id="@+id/activity_forget_btn_getnum"
   		    android:layout_width="wrap_content"
   		    android:layout_height="wrap_content"
   		    android:textColor="#BBBBBB"
   		    android:text="获取验证码"
   		    android:layout_margin="5dp"
   		    android:layout_gravity="center"
   		    />
   	
   	
   	</LinearLayout>
   <TextView 
       style="@style/my_divide_line"
       android:layout_marginBottom="15dp"
       />
   
   <Button 
       android:id="@+id/activity_forget_btn_next"
       android:layout_width="match_parent"
       android:layout_height="35dp"
       android:background="@drawable/login"
       android:text="下一步"
       android:textColor="#FFF"
       android:layout_margin="15dp"
       />
     
     
     
    
     
     
    
    
    
    

</LinearLayout>
